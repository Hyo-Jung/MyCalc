<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="계산 프로그램"
        android:textAlignment="center"
        android:textStyle="italic|bold"
        android:textSize="25dp"
        android:textColor="#3b35ae"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="25dp"
        android:cursorVisible="true"
        android:id="@+id/et_first"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="25dp"
        android:id="@+id/et_second"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="더하기"
        android:textSize="22dp"
        android:background="#00000000"
        android:id="@+id/bt_plus"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="빼기"
        android:textSize="22dp"
        android:background="#00000000"
        android:id="@+id/bt_subs"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="곱하기"
        android:textSize="22dp"
        android:background="#00000000"
    android:id="@+id/bt_mult"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="나누기"
        android:textSize="22dp"
        android:textColor="#000000"
        android:background="#a7e1e1"
        android:id="@+id/bt_divd"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="나머지 값"
        android:textSize="20dp"
        android:textColor="#000000"
        android:background="#69d2d2"
        android:id="@+id/bt_mod"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="결과는 하단에 표시됩니다."
        android:textAlignment="center"
        android:textStyle="italic|bold"
        android:textSize="20dp"
        android:textColor="#2e04e9"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textStyle="italic|bold"
        android:textSize="20dp"
        android:id="@+id/tv_ruslt"/>
</LinearLayout>
